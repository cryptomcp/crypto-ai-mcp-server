# MCP Crypto Bot Configuration
# Copy this file to .env and fill in your actual values

# Risk Management (CRITICAL - NEVER ENABLE LIVE TRADING WITHOUT UNDERSTANDING RISKS)
LIVE=0
AM_I_SURE=NO
MAX_ORDER_USD=100
DAILY_LOSS_LIMIT_USD=200

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OWNER_TELEGRAM_ID=123456789

# AI Providers (at least one required for AI features)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# CEX Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_key_here

# Blockchain RPC
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Private Keys (keep these secure!)
EVM_PRIVATE_KEY=your_evm_private_key_here
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# API Keys
ZEROEX_API_KEY=your_0x_api_key_here

# Logging
LOG_LEVEL=INFO
